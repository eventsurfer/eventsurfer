<table class="table">
  <thead>
  <tr>
    <th>Performance</th>
    <th>Location</th>
    <th>Beginning</th>
    <th>Price per ticket</th>
    <th>Count</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% if !@items.nil? %>
    <% total = 0 %>
    <% @items.each do |item| %>
      <% total += item[0].prize * item[1] %>
      <tr>
        <td><%= item[0].event.name %></td>
        <td><%= item[0].location.name %></td>
        <td><%= I18n.l(item[0].start) %></td>
        <td><%= item[0].prize %> €</td>
        <td>
          <%= form_tag(frontend_update_cart_path(item[0].id), method: "post") do %>
            <%= number_field_tag :count, value = item[1], :min => 1 %>
            <%= submit_tag value = "->" %>
          <% end %>
        </td>
        <td><%= item[0].prize * item[1] %> €</td>
        <td><a href=<%= frontend_remove_from_cart_path(item[0].id) %>>X</a></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= total %> €</td>
    </tr>
  <% end %>

  </tbody>
</table>
<a href="<%= frontend_create_order_path %>" class="btn btn-primary">ORDER <i class="far fa-credit-card"></i></a>
