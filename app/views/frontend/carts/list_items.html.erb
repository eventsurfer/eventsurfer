<table class="table">
  <th>Performance</th>
  <th>Count</th>
  <tbody>
  <% if !@items.nil? %>
    <% @items.each do |item| %>
      <tr>
        <td><%= item[0] %></td>
        <td>
          <%= form_tag(frontend_update_cart_path(item[0]), method: "post") do %>
            <%= number_field_tag :count, value = item[1], :min => 1 %>
            <%= submit_tag value = "->" %>
          <% end %>
        </td>
        <td><a href=<%= frontend_remove_from_cart_path(item[0]) %>>X</a></td>
      </tr>
    <% end %>
    <%= @cart %>
  <% end %>


  </tbody>
  <%= button_to "ORDER", frontend_create_order_path, method: :post %>
</table>
