<div class="card-columns">
  <% @events.each do |event| %>
    <div class="card">
      <% if event.logo.attached? %>
        <img class="card-img-top" src="<%= url_for(event.logo) %>" alt="<%= event.name %>">
      <% else %>
        <img class="card-img-top" src="http://placehold.it/300x200" alt="<%= event.name %>">
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= event.name %></h5>
        <p class="card-text"><%= event.description %></p>
        <p class="card-text">
          <small class="text-muted">Last Updated: <%= l(event.updated_at) %></small>
        </p>
      </div>
      <div class="card-footer">
        <a href="<%= frontend_event_path(event.id) %>" class="btn btn-primary">Find Out More!</a>
      </div>
    </div>
  <% end %>
</div>