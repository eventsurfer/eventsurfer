<div class="row" >
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <div class="container-fluid rounded">
      <h1>Eventsurfer</h1>
      <p><%= t("devise.passwords.new.forgot_your_password") %></p>
      <%= image_tag("pengu_logo.png", class: "rounded mx-auto d-block", width:"200px") %>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group input-group">
        <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupPrepend">
                <i class="far fa-envelope"></i>
              </span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", :placeholder => "e-mail" %>
      </div>

      <div class="actions form-group">
        <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions"), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>


    <%= render "devise/shared/links" %>
  </div>
</div>
