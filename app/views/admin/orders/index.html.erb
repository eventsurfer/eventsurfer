<h2>Orders</h2>
<div class="container">
  <div class="row">

    <div class="col-sm-6">
      <h3>Paid</h3>
      <div class="panel-group">
        <% @paid.each do |order| %>
          <div class="panel panel-default hover">
            <div class="panel-heading">
              <h4 class="panel-title">
                <div class="clearfix">
                  <span data-toggle="collapse" href="#collapse<%= order.id.to_s %>"><%= @user.find(order.user_id).name %>
                    <span class="float-right"><i class="fas fa-chevron-down"></i></span></span>
                </div>
              </h4>
              <div class="panel-collapse collapse " id="collapse<%= order.id.to_s %>">
                <div class="panel-body">
                  <table class="table table-hover">
                    <th><%= "Order Nr." %></th>
                    <th><%= "paid_at" %></th>
                    <th><%= "payment_method" %></th>
                    <th><%= link_to (order.id)%></th>
                    <tbody>
                    <tr>
                      <td><%= order.id %></td>
                      <td><%= I18n.l(order.paid_at.to_date, format: :shortest) %></td>
                      <td><%= order.payment_method %></td>
                    </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6">
      <h3>Unpaid</h3>
      <ul>
        <% @unpaid.each do |order| %>
          <li>
            <%= @user.find(order.user_id).name %>
            <table class="table">
              <tr>
                <th>33</th>
                <th>44</th>
              </tr>
            </table>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

