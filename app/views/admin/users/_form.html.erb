<%= form_for :user do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field(:name, class: "form-control", :minlength => 1, :maxlenght => 100, :require => true) %>
  </div>
  <div class="form-group ">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field(:email, class: "form-control") %>
  </div>
  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation %><br/>
    <%= form.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>
  <% if current_user.role == "costumer" %>

  <% else %>
    <div class="form-group ">
      <%= form.label :rank, class: "form-label" %>
      <%= form.number_field :rank, :step => 1, max: 4, min: 0, default: 0, class: "form-control" %>

    </div>
  <% end %>
  <div class="form-group form-check">
    <%= form.label(:admin, class: "form-check-label") do %>
      <%= form.check_box(:admin, class: "form-check-input") %>
      User ist Admin
    <% end %>
  </div>
  <div>
    <%= form.submit("change", class: "btn btn-primary") %>
  </div>

<% end %>