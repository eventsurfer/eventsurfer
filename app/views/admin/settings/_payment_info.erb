<hr>
<div class="container">
  <div class="form-group">
    <%= form_for(@default_info, :url => {:controller => "settings", :action => "defaultInfo"}, method: :post) do |form| %>
      <div class="form-group form-inline">
        <%= form.label(:company, class: "form-label") %>
        <%= form.text_field(:company, class: "form-control") %>
      </div>
      <div class="form-group">
        <div class="form-inline">
          <%= form.label(:street, class: "form-label") %>
          <%= form.text_field(:street, class: "form-control", min: 1) %>
          <%= form.label(:street_number, class: "form-label") %>
          <%= form.text_field(:street_number, class: "form-control", min: 1) %>
        </div>
        <div class="form-inline">
          <%= form.label(:postcode, class: "form-label") %>
          <%= form.text_field(:postcode, class: "form-control", min: 1) %>
          <%= form.label(:city, class: "form-label") %>
          <%= form.text_field(:city, class: "form-control", min: 1) %>
          <%= form.label(:country, class: "form-label") %>
          <%= form.text_field(:country, class: "form-control", min: 1) %>
        </div>
      </div>
      <div class="form-group">
        <%= form.label(:website, class: "form-label") %>
        <%= form.text_field(:website, class: "form-control") %>
      </div>
      <div class="form-group">
        <%= form.label(:email, class: "form-label") %>
        <%= form.email_field(:email, class: "form-control") %>
      </div>
      <div class="form-group">
        <%= form.submit("change", class: "btn btn-primary",) %>

      </div>
    <% end %>
  </div>
</div>