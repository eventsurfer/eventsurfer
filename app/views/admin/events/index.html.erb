<h1>Index Events</h1>
<table class="table table-striped table-responsive table-sm table-active table-hover">
  <th>Name</th>
  <th>Start date</th>
  <th>End date</th>
  <th>Hoster</th>
  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= I18n.l(event.start.to_datetime, format: :shortest) %></td>
      <td><%= I18n.l(event.stop.to_datetime, format: :shortest) %></td>
      <td><%= event.hoster_name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
