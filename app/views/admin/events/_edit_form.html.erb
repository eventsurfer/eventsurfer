<%= form_for :event do |form| %>
  <div class="form-group">
    <%= form.label(:name) %>
    <%= form.text_field(:name, class:"form-control", placeholder: "event name") %>
  </div>
  <div class="form-group">
    <%= form.label(:description) %>
    <%= form.text_area(:description, class: "form-control", placeholder: "event description") %>
  </div>
  <div class="form-inline">
    <div class="form-group">
      <%= form.label(:start) %>
      <%= form.time_select(:start, class:"form-control", placeholder: "start of event") %>
    </div>
    <div class="form-group">
      <%= form.label(:stop) %>
      <%= form.time_select(:stop, class:"form-control",placeholder: "stop of event") %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label(:hoster_name) %>
    <%= form.text_field(:hoster_name, class: "form-control", placeholder: "name of hoster") %>
  </div>
  <div class="form-group">
    <%= form.label(:website) %>
    <%= form.text_field(:website, class:"form-control", placeholder: "link to event website") %>
  </div>
  <div class="form-group">
    <%= form.label(:hotline) %>
    <%= form.text_field(:hotline, class:"form-control", placeholder: "hotline") %>
  </div>
  <div class="form-group">
    <div>
      <%= form.submit("change", class: "btn btn-primary") %>
    </div>
  </div>

<%end %>