<div class="container-fluid">
  <h1><%= @event.name %></h1>
  <div class="row">
    <div class="col-sm-6">
      <h3>Performances</h3>
      <p>Has <%= @performances.size %> Performances</p>
      <table class="table">
        <th><%= I18n.t (:location) %></th>
        <th>Start</th>
        <th>Stop</th>
        <tbody>
          <% @performances.each do |perform| %>
            <tr>

              <td><%= @locations.where(:performance_id => Performance.first.id).first.location.name%></td>
              <td><%= I18n.l(perform.performance.start.to_date, format: :default) %></td>
              <td><%=I18n.l(perform.performance.stop.to_date, format: :default) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-6">
      <h3>Locations</h3>
      <p>Has <%= @locations.size %> Locations</p>
      <%= @locations.each do |loc| %>
        <ul>
          <%= getFullAddress(loc.location) %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
